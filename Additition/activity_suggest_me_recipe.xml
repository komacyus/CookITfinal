<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SuggestMeRecipeActivity">

<ScrollView
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/cookable"
        android:background="@color/tacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/suggestMeRecipeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:text="With getting these ingredients by .... you can also do this:"
            android:textSize="40sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/suggestion"
            android:background="@color/tacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            tools:ignore="InvalidId,MissingConstraints" />

        <Button
            android:id="@+id/goMarket"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:text="Go to market"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>